<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#dddddd" />
            <stroke android:width="1dp" android:color="#cccccc" />
            <corners android:radius="5dp" />
            <padding android:left="15dp" android:top="10dp" android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
        
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/link_inactive" />
            <stroke android:width="1dp" android:color="@color/link_inactive" />
            <corners android:radius="5dp" />
            <padding android:left="15dp" android:top="10dp" android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
        
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/link_active" />
            <stroke android:width="1dp" android:color="@color/link_active" />
            <corners android:radius="5dp" />
            <padding android:left="15dp" android:top="10dp" android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/link_inactive" />
            <stroke android:width="1dp" android:color="@color/link_active" />
            <corners android:radius="5dp" />
            <padding android:left="15dp" android:top="10dp" android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#c3c3c3" />
            <stroke android:width="1dp" android:color="#E7EEF1" />
            <corners android:radius="5dp" />
            <padding android:left="15dp" android:top="10dp" android:right="15dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>